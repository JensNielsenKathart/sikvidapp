<?xml version="1.0" encoding="UTF-8" ?>
<widget xmlns = "http://www.w3.org/ns/widgets"
    xmlns:gap = "http://phonegap.com/ns/1.0"
    id        = "com.phonegap.example"
    version   = "1.0.0">

<name>Sikkerhedsstyrelsen - video App</name>

<description>
Sikkerhedsstyrelsen - Video app
</description>

<author href="https://www.kathart.dk" email="jens@kathart.dk.com">
Jens Nielsen
</author>

<content src="index.html" />

    <access origin="http://www.sik.dk/Tjek-din-haandvaerker" />

    <preference name="AllowInlineMediaPlayback" value="false" />
    <preference name="orientation" value="portrait" />
    <preference name="show-splash-screen-spinner" value="true" />

    <icon src="img/icon/ios/icon-57.png" gap:platform="ios" width="57" height="57" />
    <icon src="img/icon/ios/icon-72.png" gap:platform="ios" width="72" height="72" />
    <icon src="img/icon/ios/icon-57-2x.png" gap:platform="ios" width="114" height="114" />
    <icon src="img/icon/ios/icon-72-2x.png" gap:platform="ios" width="144" height="144" />

    <gap:splash src="img/screen/ios/screen-iphone-portrait.png"    gap:platform="ios"     width="320" height="480" />
    <gap:splash src="img/screen/ios/screen-iphone-portrait-2x.png" gap:platform="ios"     width="640" height="960" />
    <gap:splash src="img/screen/ios/screen-iphone-portrait-568h-2x.png" gap:platform="ios"     width="640" height="1136" />

</widget>
